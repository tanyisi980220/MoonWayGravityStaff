<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImproperFragment">

    <RelativeLayout
        android:id="@+id/firstlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/lbl_flow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/improper_parked"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/lbl_flow_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_flow_title"
            android:layout_marginTop="10dp"
            android:padding="@dimen/keyline_2"
            android:text="Select a block to view improper parked slot."
            android:textSize="18dp"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_flow_description"
            android:layout_marginLeft="10dp"
            android:background="@drawable/spinner_background">

            <Spinner
                android:id="@+id/dropdown"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/dropdown"
                android:src="@drawable/arrowup" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstlayout">

        <TextView

            android:id="@+id/block_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:text="All Blocks"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#0E2433"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/block_name">

            <TableRow android:background="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Floor"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Parked Number"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Moving Number"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>


    </RelativeLayout>


</RelativeLayout>