<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarFlowFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/layy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/car_flow"
                android:id="@+id/flow_title"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/flow_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Select a block to view car flow."
                android:textSize="12dp"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layy1"
            android:layout_marginTop="@dimen/keyline_5"
            android:layout_marginBottom="@dimen/keyline_5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/blockRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/block_row" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>




